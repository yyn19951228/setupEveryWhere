{
"languageserver": {
    "golang": {
	"command": "gopls",
    "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
    "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.envFile": "${workspaceRoot}/.env" ,
  "coc.preferences.jumpCommand": "vsplit"
}
